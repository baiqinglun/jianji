{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@assets*": ["./assets/*"]
    }
  },
  "jsx": "preserve",
  "include": [
    "**/*.ts",
    "**/*.styles.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
